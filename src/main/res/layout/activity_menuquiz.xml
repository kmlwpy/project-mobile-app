<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmenuquiz"
    tools:context=".MenuquizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mitr_semibold"
            android:text="ถามเร็วตอบเร็ว"
            android:textColor="#F17CA3"
            android:textSize="48sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/worldwide"
            android:fontFamily="@font/mitr_semibold"
            android:onClick="worldwide"
            android:text="ความรู้รอบตัว"
            android:textColor="#292929"
            android:textSize="18sp"
            app:backgroundTint="#E4FFFFFF" />

        <Button
            android:id="@+id/button5"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/maths"
            android:fontFamily="@font/mitr_semibold"
            android:onClick="math"
            android:text="คิดเลขเร็ว"
            android:textColor="#000000"
            android:textSize="18sp"
            app:backgroundTint="#E4FFFFFF" />

        <Button
            android:id="@+id/button6"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/abc"
            android:fontFamily="@font/mitr_semibold"
            android:onClick="vocab"
            android:text="ทายคำศัพท์"
            android:textColor="#000000"
            android:textSize="18sp"
            app:backgroundTint="#E4FFFFFF" />
    </LinearLayout>
</RelativeLayout>